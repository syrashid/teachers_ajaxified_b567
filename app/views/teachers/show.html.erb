<h1><%= @teacher.name %> <small><%= @teacher.campus %></small></h1>
<h2>
  <%= pluralize @teacher.reviews.size, "review" %>
</h2>

<div id="reviews">
  <% if @teacher.reviews.blank? %>
    Be the first to leave a review for <%= @teacher.name %>
  <% else %>
    <% @teacher.reviews.each do |review| %>
      <p id="review-<%= review.id %>"><%= review.content %></p>
    <% end %>
  <% end %>
</div>

<%= simple_form_for([@teacher, @review], remote: true) do |f| %>
  <%= f.input :content %>
  <%= f.button :submit, class: 'btn btn-outline-dark' %>
<% end %>


<%= link_to "< Back to Home", teachers_path %>
